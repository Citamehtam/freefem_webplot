func f = exp(x + y);
func g = sin(2*pi*x);
func g0 = 0;
int n = 20;
      border G1(t = 0, 1) {x = t; y = 0;}
border G2(t = 0, 1) {x = 1; y = t;}
border G3(t = 0, 1) {x = 1 - t; y = 1;}
border G4(t = 0, 1) {x = 0; y = 1 - t;}
mesh Th = buildmesh(G1(n) + G2(n) + G3(n) + G4(n));
fespace Vh(Th, P1);
Vh u,v;
solve elliptic(u, v) =
int2d(Th)(2*dx(u)*dx(v) + 2*dy(u)*dy(v)) +
int2d(Th)(3*u*v) - int2d(Th)(f*v) + on(G1, u = g) + on(G2,G3,G4, u = g0
);
// results
load "myserver"
webplot(u,Th);
server();