load "myserver"

bool debug = true;

border a(t=0, 2.*pi){x=cos(t); y=sin(t); label=1;};
border b(t=0, 2.*pi){x=0.3+0.3*cos(t); y=0.3*sin(t); label=2;};

//so change (0.8 in 0.3 in b)
//if debug == true, press Enter to continue

mesh Th = buildmesh(a(50) + b(-30));
// webplot(a(50) + b(-30),Th ); //plot the borders to see the intersection
webplot(Th); //plot Th then press Enter

fespace Vh(Th,P1);
Vh f = sin(pi*x)*cos(pi*y);
Vh g = sin(pi*x + cos(pi*y));

webplot(f, Th); //plot the function f
webplot(g, Th); //plot the function g
server();
